{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "output": ["eDP-1"],
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 47,
    // "width": 1580,
    "modules-left": ["clock", "custom/weather", "hyprland/workspaces", "custom/window_state"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["network", "bluetooth", "memory", "battery", "backlight", "pulseaudio", "pulseaudio#microphone", "custom/recorder"],

    "hyprland/window": {
        "format": "{}",
        "icon": true,
        "icon-size": 20,
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "on-click": "activate",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
        },
        "format-icons": {
          "active": []
        }
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "clock": {
        "format": " {:%I:%M %p   %a, %b %e}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": " Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+",
        "on-scroll-down": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%-",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": " {volume}%",
        "format-source-muted": " Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_SOURCE@ 5%+",
        "on-scroll-down": "wpctl set-volume  -l 1.0 @DEFAULT_SOURCE@ 5%-",
        "scroll-step": 5
    },
    
    "memory": {
        "interval": 20,
        "format": "{used:0.1f}G 󰍛"
    },
    
    "temperature": {
        "thermal-zone": 2,
        "format": "{temperatureC}°C ",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}°C "
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "  {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format": "{essid} - {ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },

    "bluetooth": {
        "format": " {status}",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": " {num_connections}",
        "tooltip-format": "{device_alias}",
        "tooltip-format-connected": " {device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}"
    },

    "custom/weather": {
        "exec": "curl 'https://wttr.in/Matamoros?format=1' | grep -v Unknown",
        "interval": 900
    },

  "custom/recorder": {
       "format": " ",
       "return-type": "json",
       "interval": 1,
       "exec": "echo '{\"class\": \"recording\"}'",
       "exec-if": "pgrep wf-recorder"
    },

  "custom/window_state": {
        "format": "{}",
        "return-type": "json",
        "exec": "/usr/bin/env cat /tmp/hyprwindow",
        "signal": 10,
    },
}
